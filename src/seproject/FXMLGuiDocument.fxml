<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<AnchorPane id="AnchorPane" prefHeight="448.0" prefWidth="539.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seproject.FXMLGuiDocumentController">
   <children>
      <VBox fx:id="menuVBox" alignment="CENTER" prefHeight="127.0" prefWidth="589.0">
         <children>
            <MenuBar>
              <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="saveMenu" mnemonicParsing="false" onAction="#handleActionSaveDrawing" text="Save" />
                        <MenuItem fx:id="loadMenu" mnemonicParsing="false" onAction="#handleActionLoadDrawing" text="Load" />
                  </items>
                </Menu>
                  <Menu fx:id="undoMenu" mnemonicParsing="false" text="Undo" />
              </menus>
            </MenuBar>
            <HBox fx:id="toolBox" onMouseClicked="#handleClickedToolBox" prefHeight="105.0" prefWidth="589.0" spacing="10.0">
               <children>
                  <Button fx:id="rectangleButton" mnemonicParsing="false" onAction="#handleButtonActionRectangle" text="Rectangle" />
                  <Button fx:id="ellipseButton" mnemonicParsing="false" onAction="#handleButtonActionEllipse" text="Ellipse" />
                  <Button fx:id="lineButton" mnemonicParsing="false" onAction="#handleButtonActionLine" text="Line" />
                  <Label prefHeight="25.0" prefWidth="69.0" text="Outline color">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </Label>
                  <ColorPicker fx:id="outlineColor" prefHeight="26.0" prefWidth="45.0">
                     <value>
                        <Color />
                     </value>
                  </ColorPicker>
                  <Label prefHeight="25.0" prefWidth="65.0" text="Filling color">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </Label>
                  <ColorPicker fx:id="fillingColor" prefHeight="26.0" prefWidth="45.0">
                     <value>
                        <Color red="1.0" green="1.0" blue="1.0" opacity="0.0" />
                     </value>
                  </ColorPicker>
                  <CheckBox fx:id="selectShapeCheckBox" mnemonicParsing="false" onAction="#handleSelectCheckBox" prefHeight="25.0" prefWidth="102.0" text="Select shape">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </CheckBox>
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox fx:id="editBox" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleButtonActionDelete" text="Delete" />
                  <Button fx:id="moveButton" mnemonicParsing="false" onAction="#handleButtonActionMove" text="Move" />
                  <Button mnemonicParsing="false" text="Copy" />
                  <Button mnemonicParsing="false" text="Cut" />
                  <Button mnemonicParsing="false" text="Paste" />
                  <Button mnemonicParsing="false" text="To the front" />
                  <Button fx:id="changeDimensionsButton" mnemonicParsing="false" onAction="#handleActionChangeDimensions" text="Change dimensions" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <Label fx:id="statusLabel" />
         </children>
      </VBox>
      <ScrollPane layoutY="128.0" prefHeight="320.0" prefWidth="589.0">
        <content>
          <AnchorPane fx:id="drawingArea" minHeight="0.0" minWidth="0.0" onMouseClicked="#handleMouseClickeOnDrawingArea" onMouseDragged="#handleMouseDraggedOnDrawingArea" onMousePressed="#handleMousePressedOnDrawingArea" onMouseReleased="#handleMouseReleasedOnDrawingArea" prefHeight="2000.0" prefWidth="2000.0" />
        </content>
      </ScrollPane>
   </children>
</AnchorPane>
