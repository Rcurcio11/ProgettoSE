<GridPane prefHeight="541.0" prefWidth="637.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seproject.FXMLGuiDocumentController">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints maxHeight="200.0" minHeight="10.0" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <ScrollPane prefHeight="320.0" prefWidth="637.0" GridPane.rowIndex="1">
         <content>
            <AnchorPane fx:id="parentArea" prefHeight="200.0" prefWidth="200.0">
               <children>
                <AnchorPane fx:id="drawingArea" layoutY="-1.0" minHeight="0.0" minWidth="0.0" onMouseClicked="#handleMouseClickeOnDrawingArea" onMousePressed="#handleMousePressedOnDrawingArea" prefHeight="2000.0" prefWidth="2000.0" />
                  <AnchorPane fx:id="insertionArea" disable="true" onMouseDragged="#handleMouseDraggedOnInsertionArea" onMousePressed="#handleMousePressedOnInsertionArea" onMouseReleased="#handleMouseReleasedOnInsertionArea" prefHeight="2000.0" prefWidth="2000.0" visible="false" />
                  <AnchorPane fx:id="changeDimensionsArea" disable="true" onMouseDragged="#handleMouseDraggedOnCDArea" onMousePressed="#handleMousePressedOnCDArea" onMouseReleased="#handleMouseReleasedOnCDArea" prefHeight="2000.0" prefWidth="2000.0" visible="false" />
                  <AnchorPane fx:id="moveArea" disable="true" onMouseDragged="#handleMouseDraggedOnMoveArea" onMousePressed="#handleMousePressedOnMoveArea" onMouseReleased="#handleMouseReleasedOnMoveArea" prefHeight="1997.0" prefWidth="1996.0" visible="false" />
                  <AnchorPane fx:id="editingArea" disable="true" onMousePressed="#handleMousePressedOnEditingArea" onMouseReleased="#handleMouseReleasedOnEditingArea" prefHeight="2000.0" prefWidth="2000.0" visible="false" />
                  <AnchorPane fx:id="pasteArea" disable="true" layoutX="-2.0" layoutY="-1.0" onMouseClicked="#handleMouseClickedOnPasteArea" prefHeight="2000.0" prefWidth="2000.0" visible="false" />
               </children>
            </AnchorPane>
         </content>
      </ScrollPane>
      <VBox fx:id="menuVBox" alignment="CENTER" prefHeight="127.0" prefWidth="637.0">
         <children>
            <MenuBar>
              <menus>
                <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="saveMenu" mnemonicParsing="false" onAction="#handleActionSaveDrawing" text="Save" />
                        <MenuItem fx:id="loadMenu" mnemonicParsing="false" onAction="#handleActionLoadDrawing" text="Load" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox fx:id="toolBox" onMouseClicked="#handleClickedToolBox" prefHeight="105.0" prefWidth="589.0" spacing="10.0">
               <children>
                  <Button fx:id="rectangleButton" mnemonicParsing="false" onAction="#handleButtonActionRectangle" text="Rectangle" />
                  <Button fx:id="ellipseButton" mnemonicParsing="false" onAction="#handleButtonActionEllipse" text="Ellipse" />
                  <Button fx:id="lineButton" mnemonicParsing="false" onAction="#handleButtonActionLine" text="Line" />
                  <Label prefHeight="25.0" prefWidth="69.0" text="Outline color">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </Label>
                  <ColorPicker fx:id="outlineColor" onAction="#handleActionChangeOutlineColor" prefHeight="26.0" prefWidth="45.0">
                     <value>
                        <Color />
                     </value>
                  </ColorPicker>
                  <Label prefHeight="25.0" prefWidth="65.0" text="Filling color">
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                  </Label>
                  <ColorPicker fx:id="fillingColor" onAction="#handleActionChangeFillingColor" prefHeight="26.0" prefWidth="45.0">
                     <value>
                        <Color red="1.0" green="1.0" blue="1.0" opacity="0.0" />
                     </value>
                  </ColorPicker>
                  <CheckBox fx:id="selectShapeCheckBox" mnemonicParsing="false" onAction="#handleSelectCheckBox" prefHeight="25.0" prefWidth="102.0" text="Select shape">
                     <padding>
                        <Insets left="5.0" />
                     </padding>
                  </CheckBox>
                  <Button fx:id="undoButton" mnemonicParsing="false" onAction="#handleActionUndoButton" text="Undo" />
               </children>
               <padding>
                  <Insets left="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="pasteButton" mnemonicParsing="false" onAction="#handleButtonActionPaste" text="Paste" />
                  <HBox fx:id="editBox" prefHeight="40.0" prefWidth="569.0" spacing="10.0">
                     <children>
                        <Button fx:id="copyButton" mnemonicParsing="false" onAction="#handleButtonActionCopy" text="Copy" />
                        <Button fx:id="cutButton" mnemonicParsing="false" onAction="#handleButtonActionCut" text="Cut" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleButtonActionDelete" text="Delete" />
                        <Button fx:id="moveButton" mnemonicParsing="false" onAction="#handleButtonActionMove" text="Move" />
                        <Button fx:id="changeDimensionsButton" mnemonicParsing="false" onAction="#handleActionChangeDimensions" text="Change dimensions" />
                        <Button fx:id="frontButton" mnemonicParsing="false" onAction="#handleButtonActionFront" text="To front" />
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleButtonActionBack" text="To back" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </HBox>
               </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
            </HBox>
            <Label fx:id="statusLabel" />
         </children>
      </VBox>
   </children>
</GridPane>
